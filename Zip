npm install -g @open-wa/wa-automate const { create, Client } = require('@open-wa/wa-automate');

create().then(client => start(client));

function start(client) {
  
  client.onMessage(async message => {
    
    if (message.body === "!oi") {
      await client.sendText(message.from, "ğŸ‘‹ OlÃ¡! Eu sou seu bot de diversÃ£o!");
    }

    if (message.body === "!piada") {
      await client.sendText(message.from, "ğŸ¤£ Qual Ã© o cÃºmulo do absurdo? Usar rÃ©gua pra medir febre!");
    }

    if (message.body === "!menu") {
      await client.sendText(message.from, "ğŸ“Œ Comandos disponÃ­veis:\n\n!oi\n!piada\n!sticker (envie com imagem)");
    }

    if (message.mimetype) {
      const mediaData = await client.decryptFile(message);
      const fs = require('fs');
      const filename = `media.${message.mimetype.split('/')[1]}`;
      fs.writeFileSync(filename, mediaData);

      if (message.caption === "!sticker") {
        await client.sendImageAsSticker(message.from, filename);
      }
    }
  });
}
